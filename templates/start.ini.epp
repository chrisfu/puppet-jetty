
<% unless $jetty::configuration =~ Undef { -%>

<% unless $jetty::configuration['warning'] =~ Undef { -%>
# To disable the warning message, comment the following line
--module=home-base-warning

<% } -%>
<% unless $jetty::configuration['modules']['server'] =~ Undef { -%>
# ---------------------------------------
# Module: server
--module=server
# Thread setup
threads.min=<%= $jetty::configuration['modules']['server']['threads.min'] %>
threads.max=<%= $jetty::configuration['modules']['server']['threads.max'] %>
threads.timeout=<%= $jetty::configuration['modules']['server']['threads.timeout'] %>
# Jetty stuff
jetty.output.buffer.size=<%= $jetty::configuration['modules']['server']['jetty.output.buffer.size'] %>
jetty.request.header.size=<%= $jetty::configuration['modules']['server']['jetty.request.header.size'] %>
jetty.response.header.size=<%= $jetty::configuration['modules']['server']['jetty.response.header.size'] %>
jetty.send.server.version=<%= $jetty::configuration['modules']['server']['jetty.send.server.version'] %>
jetty.send.date.header=<%= $jetty::configuration['modules']['server']['jetty.send.date.header'] %>
jetty.dump.start=<%= $jetty::configuration['modules']['server']['jetty.dump.start'] %>
jetty.dump.stop=<%= $jetty::configuration['modules']['server']['jetty.dump.stop'] %>
jetty.delayDispatchUntilContent=<%= $jetty::configuration['modules']['server']['jetty.delayDispatchUntilContent'] %>
#jetty.host=myhost.com

# As key value
<% $jetty::configuration['modules']['server'].each |$key, $value| { -%>
<%= $key %>=<%= $value %>
<% } -%>
<% } -%>

<% unless $jetty::configuration['modules']['deploy'] =~ Undef { -%>
# ---------------------------------------
# Module: deploy
--module=deploy
jetty.deploy.monitoredDirName=<%= $jetty::configuration['modules']['deploy']['jetty.deploy.monitoredDirName'] %>
<% } -%>

<% unless $jetty::configuration['modules']['websocket'] =~ Undef { -%>
# ---------------------------------------
# Module: websocket
--module=websocket
<% } -%>

<% unless $jetty::configuration['modules']['ext'] =~ Undef { -%>
# ---------------------------------------
# Module: ext
--module=ext
<% } -%>

<% unless $jetty::configuration['modules']['resources'] =~ Undef { -%>
# ---------------------------------------
# Module: resources
--module=resources
<% } -%>

<% unless $jetty::configuration['modules']['jsp'] =~ Undef { -%>
# ---------------------------------------
# Module: jsp
--module=jsp
jsp-impl=apache
<% } -%>

<% unless $jetty::configuration['modules']['jstl'] =~ Undef { -%>
# ---------------------------------------
# Module: jstl
--module=jstl
<% } -%>

<% unless $jetty::configuration['modules']['http'] =~ Undef { -%>
# ---------------------------------------
# Module: http
--module=http
jetty.port=<%= $jetty::configuration['modules']['http']['jetty.port'] %>
http.timeout=<%= $jetty::configuration['modules']['http']['http.timeout'] %>

#http.soLingerTime=-1
#http.selectors=1
#http.acceptors=1
#http.selectorPriorityDelta=0
#http.acceptorPriorityDelta=0
<% } -%>
<% } -%>


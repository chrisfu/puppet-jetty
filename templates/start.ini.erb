#
# <%= @configuration.inspect %>
#
<% if @configuration -%>
--module=home-base-warning

<% if @configuration['modules'].has_key?('server') -%>
--module=server
<% @configuration['modules']['server'].each do |k,v| -%>
<%= k %>=<%= v %>
<% end -%>
<% end -%>

<% if @configuration['modules'].has_key?('logging') -%>
--module=logging
<% end -%>

<% if @configuration['modules'].has_key?('deploy') -%>
--module=deploy
<% @configuration['modules'].has_key?('deploy').each do |k,v| -%>
<%= k %>=<%= v %>
<% end -%>
<% end -%>

<% if @configuration['modules'].has_key?('websocket') -%>
--module=websocket
<% end -%>

<% if @configuration['modules'].has_key?('ext') -%>
--module=ext
<% end -%>

<% if @configuration['modules'].has_key?('resources') -%>
--module=resources
<% end -%>

<% if @configuration['modules'].has_key?('jsp') -%>
--module=jsp
jsp-impl=apache
<% end -%>

<% if @configuration['modules'].has_key?('jstl') -%>
--module=jstl
<% end -%>

<% if @configuration['modules'].has_key?('http') -%>
--module=http
<% @configuration['modules']['http'].each do |k,v| -%>
<%= k %>=<%= v %>
<% end -%>
<% end -%>

<% end -%>

